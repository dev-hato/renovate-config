{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices", ":timezone(Asia/Tokyo)"],
  "automerge": true,
  "platformAutomerge": true,
  "prConcurrentLimit": 2,
  "packageRules": [
    {
      "matchManagers": ["gomod"],
      "postUpdateOptions": ["gomodTidy"]
    },
    {
      "matchDatasources": ["*"],
      "minimumReleaseAge": "7 days"
    },
    {
      "matchPackageNames": ["npm"],
      "enabled": false
    }
  ],
  "lockFileMaintenance": {
    "enabled": true
  }
}
